<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="crafter.solrClient" class="org.apache.solr.client.solrj.embedded.EmbeddedSolrServer">
        <constructor-arg value="#{T(java.nio.file.Paths).get('${solr.home}')}"/>
        <constructor-arg value="${core.name}"/>
    </bean>

    <bean id="crafter.solrDocumentBuilder" class="org.craftercms.search.service.impl.SolrDocumentBuilderImpl">
        <property name="idFieldName" value="${search.main.solr.field.id.name}"/>
        <property name="rootIdFieldName" value="${search.main.solr.field.rootId.name}"/>
        <property name="siteFieldName" value="${search.main.solr.field.site.name}"/>
        <property name="localIdFieldName" value="${search.main.solr.field.localId.name}"/>
        <property name="publishingDateFieldName" value="${search.main.solr.field.publishedDate.name}"/>
        <property name="publishingDateAltFieldName" value="${search.main.solr.field.publishedDate.alt.name}"/>
        <property name="fieldValueConverter" ref="crafter.fieldValueConverter"/>
        <property name="parserService" ref="crafter.elementParserService"/>
        <property name="postProcessors">
            <list>
                <ref bean="crafter.denormalizingPostProcessor"/>
                <ref bean="crafter.renameFieldsIfMultiValuePostProcessor"/>
            </list>
        </property>
    </bean>

</beans>